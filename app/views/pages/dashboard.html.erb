<div class="container-fluid">
  <div class="row profile">
    <div class="col-xs-2">
      <div class="profile-sidebar">
        <%= link_to root_path, class: "sidebar-brand" do %>
        <%= image_tag "logo.png" %>
        <% end %>
        <!-- SIDEBAR USERPIC -->
        <div class="profile-userpic">
          <% if @user.photo? %>
          <%= cl_image_tag@user.photo.path, height: 100, width: 100, crop: :fill %>
          <% elsif @user.facebook_picture_url? %>
          <%= image_tag @user.facebook_picture_url.gsub("type=square", "type=large") %>
          <% else %>
          <%= image_tag "ninja.png" %>
          <% end %>
        </div>
        <!-- END SIDEBAR USERPIC -->
        <!-- SIDEBAR USER TITLE -->
        <div class="profile-usertitle">
          <div class="profile-usertitle-name">
            <%= @user.first_name %> <%= @user.last_name %>
          </div>
          <% if @user.hometown %>
          <div class="profile-usertitle-job">
            <%= @user.hometown%>
          </div>
          <% end %>
        </div>
        <!-- END SIDEBAR USER TITLE -->
        <!-- SIDEBAR MENU -->
        <div class="profile-usermenu">
          <ul class="nav">
            <li class="active">
              <a href="#profile" data-toggle="tab">
                <i class="fa fa-home" aria-hidden="true"></i>
                Profile
              </a>
            </li>
            <li>
              <a href="#mytrips" data-toggle="tab">
                <i class="fa fa-paper-plane" aria-hidden="true"></i>
                My trips
              </a>
            </li>
            <li>
              <a href="#mysettings" data-toggle="tab">
                <i class="fa fa-wrench" aria-hidden="true"></i>
                Settings
              </a>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
        <!-- END MENU -->
      </div>
    </div>
    <div class="col-xs-10";">
      <div class="profile-content tab-content">
        <div class="tab-pane active" id="profile">
          <%= render 'profile' %>
        </div>
        <div class="tab-pane" id="mytrips">
          <%= render 'mytrips' %>
        </div>
        <div class="tab-pane" id="sentsurveys">
          <%= render 'sentsurveys' %>
        </div>
        <div class="tab-pane" id="mysettings">
          <%= render 'users/edit' %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= content_for (:after_js) do %>
<script>
  $(function(){
    url = document.location.toString();
    if (url.match('#')) {
      $('.nav a[href="#' + url.split('#')[1] + '"]').tab('show');
    };

      // $('.nav a').on('shown.bs.tab', function (e) {
      //     window.location.hash = e.target.hash;
      // });
    });
  </script>
  <% end %>
