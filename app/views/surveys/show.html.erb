  <% if @survey.status.downcase == "select questions" %>
    <%= render 'select_questions', survey: @survey, question: @question %>
  <% elsif @survey.status.downcase == "share survey" %>
    <%= render 'share_survey', survey: @survey %>
  <% elsif @survey.status.downcase == "sent" %>
    <%= render 'surveys/show_responses', question: @question, survey: @survey %>
  <% end %>
