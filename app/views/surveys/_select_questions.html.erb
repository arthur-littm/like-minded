<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <div class="questions">
        <ul class="tabs nav nav-tabs" role="tablist">
        <% Category.all.sort.each_with_index do |category, index| %>
        <li role="presentation" class="tab <%= index == 0 ? 'active' : '' %>"><a href="#<%= category.name.downcase %>" aria-controls="<%= category.name.downcase %>" role="tab" data-toggle="tab">
        <%= image_tag "#{category.name.downcase}.png", height: "30px"%>
          <h3><%= category.name %></h3>
        </a>
      </li>
      <% end %>

      <li role="presentation" class="tab"><a href="#myquestions" aria-controls="My Questions" role="tab" data-toggle="tab">
        <%= image_tag "plus.png", height: "30px"%>
          <h3>My Questions</h3>
        </a>
      </li>


    </ul>
   <%= render 'surveys/tab_content_questions', question: question, survey: survey %>

  </div>
</div>
<div class="col-xs-4">
  <div class="survey-summary">
    <h3>Your trip survey</h3>
    <div class="fixed-cards">
      <ul>
        <% if @survey.questions %>
        <% @survey.survey_questions.each_with_index do |sq, index| %>
        <li class="summary-question-card">
          <span class="index"><%= index + 1%></span>
          <%= sq.question.content %>
          <%= link_to survey_survey_question_path(survey_id: @survey.id, id: sq.id), method: :delete, class: "delete-questions" do %>
          <i class="fa fa-times" aria-hidden="true"></i>
          <% end %>
        </li>
        <% end %>
        <% if @survey.survey_questions.count > 0 %>
        <li class="summary-question-button">
          <%= link_to "Share trip survey", update_status_survey_path, method: :patch, class: "btn btn-danger survey-button" %>
        </li>
        <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
</div>
</div>

