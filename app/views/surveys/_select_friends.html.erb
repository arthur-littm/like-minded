<div class="container">
  <p><%= @survey.city %></p>
  <p><%= @survey.start_date %></p>
  <div class="row">
    <div class="col-xs-4">
      <div class="survey-summary">
        <h3>Summary</h3>
        <ul>
          <% if @survey.questions %>
          <% @survey.questions.each do |question| %>
          <li class="summary-question-card"><%= question.content %></li>
          <% end %>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-xs-8 friends">
      <h4>Select friends to ask: </h4>
      <%= simple_form_for [survey] do |f| %>
      <%= f.association :responders, label: false, as: :check_boxes, collection: User.all, label_method: :first_name, selected: survey.responders, wrapper_html:{class: "question-card"} %>
      <%= f.submit "Add friends", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
