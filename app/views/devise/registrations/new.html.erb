<div class="banner" style="background-image: url(<%= image_path("background.jpg")%>);">
  <div class="container login-container">
    <div class="row">
      <div class="col-xs-12">
        <p>Welcome to <span style="color: #EE6352">Like</span><span style="color: #2F323A">Minded</span style="color: #2F323A"> <%= image_tag "logo_red.png" %></p>
      </div>

      <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        <div class="panel panel-default", id="signup-box">
          <div class="panel-heading">
            <h3 class="panel-title text-center">Sign up</h3>
          </div>

          <div class="panel-body">
            <div class="form-group">
              <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-block btn-social btn-facebook facebook-button" do %>
              <span class="fa fa-facebook"></span>
              Sign up with Facebook
              <% end %>
              <hr>
            </div>
            <div class="row">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <%= f.input :first_name, label: false, placeholder: "First Name", class: "placeholder" %>
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <%= f.input :last_name, label: false, placeholder: "Last Name", class: "placeholder" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <%= f.input :email, required: true, label: false, autofocus: true, placeholder: "Email" %>
            </div>

            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <%= f.input :password, required: true, label: false, placeholder: "Password" %>
                </div>
              </div>

              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group placeholder">
                  <%= f.input :password_confirmation, label: false, placeholder: "Confirm password" %>
                </div>
              </div>
            </div>
            <%= f.button :submit, "Sign up", class:"btn btn-primary btn-block" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
